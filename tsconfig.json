{
  "compilerOptions": {
   "target": "es2020",
   "lib": ["es5", "es6", "ES2020", "dom"],
   "experimentalDecorators": true,
   "emitDecoratorMetadata": true,
   "typeRoots": ["./node_modules/@types", "src/types"],
   "module": "commonjs",
   "moduleResolution": "node",
   "resolveJsonModule": true,
   "allowJs": true,
   "outDir": "./dist",
   "rootDir": "./src",
   "esModuleInterop": true,
   "forceConsistentCasingInFileNames": true,
   "strict": true,
   "noImplicitAny": true,
   "strictPropertyInitialization": false,
   "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/app.ts", "src/routes/authRoutes.ts", "src/routes/homeRoutes.ts", "src/controllers/teamController.ts", "src/controllers/tournamentController.js", "src/controllers/authController.js"],
  "exclude": ["node_modules"],
  "ts-node": {
   "files": true
  }
 }