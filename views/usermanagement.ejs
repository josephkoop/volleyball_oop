<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Manage Admin Users</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <header>
        <h1>Manage Admin Users</h1>
    </header>

    <main class="container usermanagement-container">

        <% if (error) { %>
            <p><%= error %></p>
        <% } %>

        <section class="add-admin">
            <h2>Add New Admin</h2>
            <form action="/usermanagement/add-admin" method="post">
                <input type="text" name="username" placeholder="Admin Username" required>
                <input type="password" name="password" placeholder="Admin Password" required>
                <button type="submit">Add Admin</button>
            </form>
        </section>

        <section class="existing-admins">
            <h2>Existing Admins</h2>
            <ul>
                <% admins.forEach(admin => { %>
                    <li>
                        <%= admin.username %>
                        <form action="/usermanagement/delete-admin" method="post">
                            <input type="hidden" name="adminId" value="<%= admin.id %>">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this admin?')">Delete</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        </section>

        <div class="back-link">
            <a href="/dashboard">â† Back to Dashboard</a>
        </div>

    </main>

</body>
</html>
