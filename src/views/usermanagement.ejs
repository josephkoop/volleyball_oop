<%- include('components/header') %>

    <link rel="stylesheet" href="/styles.css">

    <header>
        <h1>Manage Users</h1>
    </header>

    <main>

        <% if (error) { %>
            <p><%= error %></p>
        <% } %>

        <!-- Add Admin Section (Centered, 600px wide) -->
        <section class="add-admin-container">
            <div class="add-admin">
                <h2>Add New Official</h2>
                <form action="/users/add" method="post">
                    <input type="text" name="username" placeholder="Official Username" required>
                    <input type="password" name="password" placeholder="Official Password" required>
                    <button type="submit">Add Official</button>
                </form>
            </div>
        </section>

        <!-- Existing Users Section -->
        <section class="existing-users-container">
            <h2>Existing Users</h2>
            <div class="existing-users-columns">
                <!-- Admin Section (Left) -->
                <div class="user-column admin-column">
                    <h3>Admins</h3>
                    <ul>
                        <% users.forEach(user => { if(user.role === 'admin'){ %>
                            <li>
                                <%= user.username %> (<%= user.role %>)
                            </li>
                        <% }} ) %>
                    </ul>
                </div>

                <!-- Regular User Section (Right) -->
                <div class="user-column regular-user-column">
                    <h3>Officials</h3>
                    <ul>
                        <% users.forEach(user => { if(user.role === 'official'){ %>
                            <li>
                                <%= user.username %> (<%= user.role %>)
                                <form action="/users/delete" method="post">
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                                </form>
                            </li>
                        <% }} ) %>
                    </ul>
                </div>
            </div>
        </section>

        <div class="back-link">
            <a href="/home">‚Üê Back to Home</a>
        </div>

    </main>

<%- include('components/footer') %>
